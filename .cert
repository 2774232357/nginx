openssl genrsa -out cert.key
openssl req -new -key cert.key -out cert.csr
openssl req -new -x509 -days 365 -key cert.key -out cert.pem

openssl genrsa -des3 -out cert.key 1024
openssl req -new -key cert.key -out cert.csr
openssl rsa -in cert.key -out cert_nopwd.key
openssl req -x509 -days 365 -in cert.csr -signkey cert_nopwd.key -out cert.pem
